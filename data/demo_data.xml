      <field name="value">650.00</field>
      <field name="state">in_use</field>
    </record>

    <record id="demo_asset_03" model="asset.management">
      <field name="name">HP LaserJet Pro Printer</field>
      <field name="category_id" ref="asset_category_peripheral" />
      <field name="value">300.00</field>
      <field name="state">new</field>
    </record>
  </data>
