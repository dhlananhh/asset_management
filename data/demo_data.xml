  <data noupdate="1">
    <!-- First, create some asset categories -->
    <record id="asset_category_laptop" model="asset.category">
      <field name="name">Laptops</field>
    </record>
    <record id="asset_category_monitor" model="asset.category">
      <field name="name">Monitors</field>
    </record>
    <record id="asset_category_peripheral" model="asset.category">
      <field name="name">Peripherals</field>
    </record>

    <!-- Then, create some demo assets -->
    <record id="demo_asset_01" model="asset.management">
      <field name="name">MacBook Pro 14" M2</field>
