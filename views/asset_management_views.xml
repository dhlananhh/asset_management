<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_asset_management_search" model="ir.ui.view">
    <field name="name">asset.management.search</field>
    <field name="model">asset.management</field>
    <field name="arch" type="xml">
      <search string="Search Equipment">
        <field name="name" string="Equipment" />
        <field name="reference" />
        <field name="employee_id" />
        <field name="department_id" />
        <separator />
        <filter string="In Use" name="filter_in_use" domain="[('state', '=', 'in_use')]" />
        <group expand="0" string="Group By">
          <filter string="Status" name="groupby_state" context="{'group_by':'state'}" />
        </group>
      </search>
    </field>
  </record>
  <record id="view_asset_management_tree" model="ir.ui.view">
    <field name="name">asset.management.list</field>
    <field name="model">asset.management</field>
    <field name="arch" type="xml">
      <list string="Equipment" decoration-muted="state == 'retired'"
        decoration-warning="state == 'repair'">
        <field name="reference" />
        <field name="name" />
        <field name="employee_id" />
        <field name="state" widget="badge" decoration-success="state == 'in_use'"
          decoration-info="state == 'new'" />
      </list>
    </field>
  </record>
  <record id="view_asset_management_form" model="ir.ui.view">
    <field name="name">asset.management.form</field>
    <field name="model">asset.management</field>
    <field name="arch" type="xml">
      <form string="Equipment">
        <header>
          <button
            name="set_state_to_in_use"
            type="object"
            string="Start Using"
            class="oe_highlight"
            invisible="state != 'new'"
          />
          <button
            name="set_state_to_repair"
            type="object"
            string="Send to Repair"
            invisible="state != 'in_use'"
          />
          <button
            name="set_state_to_retired"
            type="object"
            string="Retire"
            invisible="state not in ['in_use', 'repair']"
          />
          <button
            name="set_state_to_new"
            type="object"
            string="Set to New"
            invisible="state not in ['repair', 'retired']"
          />
          <field
            name="state"
            widget="statusbar"
            statusbar_visible="new,in_use,repair,retired"
          />
        </header>
        <sheet>
          <div class="oe_title">
            <h1>
              <field
                name="name"
                placeholder="e.g. MacBook Pro 14 inch"
              />
            </h1>
            <h2>
              <field name="reference" readonly="1" />
            </h2>
          </div>
          <group>
            <group>
              <field name="category_id" />
              <field name="employee_id" />
            </group>
            <group>
              <field name="purchase_date" />
              <field name="value" widget="monetary" />
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>
  <record id="view_asset_management_kanban" model="ir.ui.view">
    <field name="name">asset.management.kanban</field>
    <field name="model">asset.management</field>
    <field name="arch" type="xml">
      <kanban class="o_kanban_mobile" default_group_by="state">
        <field name="id" />
        <field name="name" />
        <field name="reference" />
        <field name="employee_id" />
        <field name="employee_avatar" />
        <field name="state" />
        <field name="color" />

        <templates>
          <t t-name="kanban-box">
            <div t-attf-class="oe_kanban_global_click">
              <div class="o_kanban_image">
                <img
                  t-if="record.employee_avatar.raw_value"
                  t-att-src="kanban_image('hr.employee', 'avatar_128', record.employee_id.raw_value)"
                  class="oe_kanban_avatar float-end"
                  t-att-title="record.employee_id.value"
                  alt="Employee Avatar"
                />
              </div>
              <div class="oe_kanban_details">
                <strong class="o_kanban_record_title">
                  <field name="name" />
                </strong>
                <div class="text-muted">
                  <field name="reference" />
                </div>
                <div
                  t-if="!record.employee_id.raw_value"
                  class="text-muted fst-italic mt-1"
                >
                  Unassigned
                </div>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

</odoo>
